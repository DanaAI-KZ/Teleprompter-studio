{
  "name": "teleprompter-studio",
  "version": "1.0.4",
  "description": "Professional Teleprompter by Dana Systems",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis",
    "publish": "electron-builder --win nsis -p always"
  },
  "build": {
    "appId": "com.danaai.teleprompter",
    "productName": "Teleprompter Studio",
    "files": [
      "**/*",
      "logo.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png",
      "artifactName": "${productName}.${ext}"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3"
  }
}